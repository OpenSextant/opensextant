<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
	PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<typeAliases>
        <typeAlias alias="Execution" type="org.mitre.opensextant.desktop.persistence.model.Execution"/>
        <typeAlias alias="Result" type="org.mitre.opensextant.desktop.persistence.model.Result"/>
	</typeAliases>
	
	<environments default="development">
		<environment id="development">
		  <transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="org.sqlite.JDBC"/>
				<property name="url" value="jdbc:sqlite:${dbfile}"/>
				<property name="username" value=""/>
				<property name="password" value=""/>
			</dataSource>
	   </environment>
	</environments>
	
    <mappers>
       <mapper resource="org/mitre/opensextant/desktop/persistence/model/Execution.xml"/>
       <mapper resource="org/mitre/opensextant/desktop/persistence/model/Result.xml"/>
    </mappers>

</configuration>